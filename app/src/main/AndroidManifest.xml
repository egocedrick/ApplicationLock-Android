<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.applicationlock"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core permissions -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main entry point -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Settings screen -->
        <activity android:name=".SettingsActivity" android:exported="true"/>

        <!-- PIN setup screen -->
        <activity android:name=".AppPinActivity" android:exported="false"/>

        <!-- Lock screen gate -->
        <!-- NOTE: Unlimited attempts now, lockout logic disabled in LockActivity -->
        <activity
            android:name=".LockActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:noHistory="true"
            android:exported="false" />

        <!-- Background services -->
        <service android:name=".service.AppLockService" android:exported="false"/>
        <!-- Optional watchdog service -->
        <service android:name=".service.WatchdogService" android:exported="false"/>

        <!-- Boot receiver -->
        <receiver android:name=".BootReceiver" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- Device admin receiver -->
        <!-- NOTE: Still active for device policies, not related to attempt limiter -->
        <receiver
            android:name=".MyDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="false">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>